<h1>{{name}}</h1>
<div class="country-container">
  <div class='content-box country-info'>
    <span class='country-info_item '> <span class='bold-spans'>Capital:</span> {{capital}}</span>
    <span class='country-info_item '> <span class='bold-spans'>Population:</span> {{population}}</span>
    <span class='country-info_item bold-spans'>Languages:</span>
    <ul>
      {{#each languages}}
      <li>{{this.name}}</li>
      {{/each}}
    </ul>
  </div>
  <div class='content-box'>
    <img src='{{flag}}' alt="Flag of {{name}}">
  </div>
</div>